        <form action="/admin/addcategory" method="post" enctype="multipart/form-data">
          <div class="form-group">
              <label for="username">Category Name:</label>
              <input type="text" class="form-control" id="categoryName" name="categoryName" style="border: 1px solid #000;" >
              <div id="categoryNameError" class="error-message" style="color: red;"></div>
          </div>
          <div class="form-group">
              <label for="description">Description:</label>
              <input type="text" class="form-control" id="description" name="description" style="border: 1px solid #000;" >
              <div id="descriptionError" class="error-message" style="color: red;"></div>
          </div>
          
          <div>
              <div class="mb-3">
                  <label class="form-label" for="basic-default-message">Image:</label>
                  <input type="file" name="image" style="border: 1px solid #495057;" accept=".jpg, .jpeg, .png, .gif, .webp" >
                  <div id="imageError" class="error-message" style="color: red;"></div>
              </div>
          </div>
          
          <div class="text-center">
              <a href="/admin/category" class="btn btn-secondary">Back</a>
              <input type="submit" class="btn btn-primary" value="Submit">
          </div>
      </form>
      
      <script>
          // client-side validation
          const form = document.querySelector('form');
          const categoryName = document.getElementById('categoryName');
          const description = document.getElementById('description');
          const image = document.querySelector('input[type="file"]');
          
          form.addEventListener('submit', (event) => {
              let error = false;
              
              if (!categoryName.value.trim()) {
                  categoryName.style.borderColor = 'red';
                  document.getElementById('categoryNameError').textContent = 'Please enter a category name.';
                  error = true;
              } else {
                  categoryName.style.borderColor = '';
                  document.getElementById('categoryNameError').textContent = '';
              }
              
              if (!description.value.trim()) {
                  description.style.borderColor = 'red';
                  document.getElementById('descriptionError').textContent = 'Please enter a description.';
                  error = true;
              } else {
                  description.style.borderColor = '';
                  document.getElementById('descriptionError').textContent = '';
              }
              
              if (!image.value) {
                  image.style.borderColor = 'red';
                  document.getElementById('imageError').textContent = 'Please select an image.';
                  error = true;
              } else if (!/\.(jpg|jpeg|png|gif|webp)$/i.test(image.value)) {
                  image.style.borderColor = 'red';
                  document.getElementById('imageError').textContent = 'Please select an image in JPG, JPEG, PNG, GIF, or WebP format.';
                  error = true;
              } else {
                  image.style.borderColor = '';
                  document.getElementById('imageError').textContent = '';
              }
              
              if (error) {
                  event.preventDefault();
              }
          });
      </script>
      
      
