    <div class="card-body px-0 pb-2">
      <div class="table-responsive p-0">
        <!-- Table-start -->
       
       
       
        <table class="table">
          <thead  class="table-light">
            <tr>
              <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
              <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Address</th>
              <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Payment Method</th>
              <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Order Status</th>
              <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
            </tr>
          </thead>
          <%if(saleData.length>0) { %>
          <% for (var i = 0; i < saleData.length; i++) { %>
          
          
          <tbody>
            <tr>
              <td>
                <div class="d-flex px-2 py-1">
                  <div>
                    <!-- <img src="/admin/img/coupon.png" class="avatar avatar-sm me-3 border-radius-lg"
                      alt="user1"> -->
                  </div>
                  
                  <div class="d-flex flex-column justify-content-center">
                    <h6 class="mb-0 text-xs text-sm"><%= saleData[i].date %> </h6>
                    <!-- <p class="text-xs text-secondary mb-0">john@creative-tim.com</p> -->
                  </div>
                </div>
              </td>

              <td class="align-middle text-center">
                  <p class="text-xs font-weight-bold mb-0"><%=saleData[i].address.fullName %><br><%=saleData[i].address.mobileNumber %><br><%=saleData[i].address.pincode %><br>
                    <%=saleData[i].address.houseAddress %><br><%=saleData[i].address.streetAddress %><%=saleData[i].address.landMark%>,<%=saleData[i].address.cityName %>,<%=saleData[i].address.state %>
                </p></td>
                  
              </td>

              <td class="align-middle text-center">
                <p class="text-xs font-weight-bold mb-0"><%= saleData[i].paymentMethod %> </p>
                <!-- <p class="text-xs text-secondary mb-0">Organization</p> -->
              </td>

              <td class="align-middle text-center">
                  <p class="text-xs font-weight-bold mb-0"><%= saleData[i].orderStatus %> </p>
                  <!-- <p class="text-xs text-secondary mb-0">Organization</p> -->
              </td>
              <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold"><%= saleData[i].totalAmount %> </span>
              </td>
              <td class="align-middle">
                <a href="/admin/editSalesReport/" class="btn btn-danger btn-sm align-items-center">EDIT</a>
                <a href="/admin/deleteSalesReport/" class="btn btn-danger btn-sm align-items-center">Delete</a>
              </td>
            </tr>

          </tbody>
          <% } %>

          <% }else{ %> 
              <tbody>
                  <tr>
                      <h5>Sales Report is Empty </h5>
                  </tr>
              </tbody>

           <% } %>    
        </table>  
        <!-- Table-end -->
      </div>
