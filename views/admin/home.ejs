              <canvas id="pieChart" style="max-height: 400px;"></canvas>
              <script>
                document.addEventListener("DOMContentLoaded", () => {
                  new Chart(document.querySelector('#pieChart'), {
                    type: 'pie',
                    data: {
                      labels: ['<%=categoryName[0]%>','<%=categoryName[1]%>','<%=categoryName[2]%>','<%=categoryName[3]%>'],
                      datasets: [{
                        label: '',
                        data: ['<%=categorySaleCount[0]%>', '<%=categorySaleCount[1]%>','<%=categorySaleCount[2]%>','<%=categorySaleCount[3]%>'],
                        backgroundColor: [
                          'rgb(255, 99, 132)',
                          'rgb(54, 162, 235)',
                          'rgb(255, 205, 86)',
                          'rgb(153, 102, 255)'
                          
                          
                        ],
                        hoverOffset: 4
                      }]
                    }
                  });
                });
              </script>
              <!-- End Pie CHart -->
  
            </div>
          </div>
        </div>
  
            </div>
          </div>
