   <div class="container mt-5">
    <table class="table" id="productTables">
      <thead>
        <tr>
          <th>sl.no</th>
          
          <th>Date</th>
          <th>Address</th>
          <th>payment Method</th>
          <th>order Status</th>
          <th>totalAmount</th>
          <th>Action</th>
          <th>view</th>

          <!-- <th>Action</th> -->
         
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < order.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            
            <td><%= order[i].date.toLocaleString({day:'2-digit',month:'2-digit',year:'2-digit'}) %></td>
            <td><p><%=order[i].address.fullName %><br><%=order[i].address.mobileNumber %><br><%=order[i].address.pincode %><br>
              <%=order[i].address.houseAddress %><br><%=order[i].address.streetAddress %><%=order[i].address.landMark%>,<%=order[i].address.cityName %>,<%=order[i].address.state %>
          </p></td>
            <td><%= order[i].paymentMethod %></td>
            <td><%= order[i].orderStatus %></td>
            <td><%= order[i].totalAmount %></td>
            <td>
              <div class="dropdown">
                <button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= order[i].orderStatus %>
                </button>
                <ul class="dropdown-menu">
                  <% if(order[i].orderStatus == 'pending') { %>
                  <li><a class="dropdown-item" href="/admin/orderStatus-placed?id=<%= order[i]._id %>">placed</a></li>
                  <li><a class="dropdown-item" href="/admin/orderStatus-shiped?id=<%= order[i]._id %>">Shiped</a></li>
                  <li><a class="dropdown-item" href="/admin/orderStatus-delivered?id=<%= order[i]._id %>">Delivered</a></li>
                  <% } else if(order[i].orderStatus == 'placed') { %>
                  <li><a class="dropdown-item" href="/admin/orderStatus-shiped?id=<%= order[i]._id %>">Shiped</a></li>
                  <li><a class="dropdown-item" href="/admin/orderStatus-delivered?id=<%= order[i]._id %>">Delivered</a></li>
                  <% } else if(order[i].orderStatus == 'shiped') { %>
                  <li><a class="dropdown-item" href="/admin/orderStatus-delivered?id=<%= order[i]._id %>">Delivered</a></li>
                  <% } else if(order[i].orderStatus == 'delivered') { %>
                  <!-- <li><a class="dropdown-item" href="#">Delivered</a></li> -->
                  <% } else if(order[i].orderStatus == 'return requested') { %>
                    <li><a class="dropdown-item" href="/admin/orderStatus-returnSuccess?id=<%= order[i]._id %>">Return Success</a></li>
                    <li><a class="dropdown-item" href="/admin/orderStatus-returnCancelled?id=<%= order[i]._id %>">Return Cancelled</a></li>

                  <% } else if(order[i].orderStatus == 'return success'||order[i].orderStatus == 'return cancelled') {%>
                  <% } %>
                </ul>
              </div>
            </td>
            <td><a href="/admin/order-view?id=<%= order[i]._id %>"><i class="fa-solid fa-eye"></i></a></td>
            
          </tr>
          <% } %>
        </tbody>
    </table>
