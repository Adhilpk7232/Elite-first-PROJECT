   <div class="container mt-5">
   
    <table class="table" id="table">
      <thead>
        <tr>
          <th>sl.no</th>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile Number</th>
          <th>Action</th>
         
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < users.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td> <% if(users[i].block == true){ %>
              <p style="color: red;">bolcked</p>
              <% } else { %>
               <p style="color: green;">Active</p>
             <% } %>
            </td>
            <td>
              <% if(users[i].block == true){ %>
                <a  onclick="UnblockUser('<%= users[i]._id %>')"><button class="btn btn-danger mr-2">UNBLOCK</button></a>
              <% }else{ %>
                <a onclick="blockUser('<%= users[i]._id %>')"><button class="btn btn-danger mr-2">BLOCK</button></a>
              <% } %>
              <script>
                function blockUser (userId) {
              
              Swal.fire({
                  title: 'Are you sure?',
                  text: "You want to block user!",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'yes, block!'
              }).then((result) => {
                  if (result.isConfirmed) {
                      $.ajax({
                          url: '/admin/block-user',
                          data: {
                            userId:userId,
                            
                          },
                          method: 'patch',
                          success: (response) => {
                              console.log("waoring")
                              if(response.success){
                                $('#table').load('/admin/user #table')
                              console.log(response);
                              Swal.fire({
                                  title: 'Blocked!',
                                  text: 'Your blocked',
                                  icon: 'success',
                                  showConfirmButton: false,
                                  timer:1000
                              })
                              }else{
                                Swal.fire({
                                  icon: 'error',
                                  title: 'Oops...',
                                  text: 'Item already exist!',
                           
                                })
                              }
              
                              
                              
              
                          }
              
                      })
                  }
              })
              }
              
              </script>
              <script>
                function UnblockUser (userId) {
              
              Swal.fire({
                  title: 'Are you sure?',
                  text: "You want to unblock user!",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'yes, Unblock!'
              }).then((result) => {
                  if (result.isConfirmed) {
                      $.ajax({
                          url: '/admin/block-user',
                          data: {
                            userId:userId,
                            
                          },
                          method: 'patch',
                          success: (response) => {
                              console.log("waoring")
                              if(response.success){
                                $('#table').load('/admin/user #table')
                              console.log(response);
                              Swal.fire({
                                  title: 'UnBlocked!',
                                  text: 'Your unblocked',
                                  icon: 'success',
                                  showConfirmButton: false,
                                  timer:1000
                              })
                              }else{
                                Swal.fire({
                                  icon: 'error',
                                  title: 'Oops...',
                                  text: 'Item already exist!',
                           
                                })
                              }
                          }
              
                      })
                  }
              })
              }
              
              </script>
         
