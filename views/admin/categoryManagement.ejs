  <script>
    function deleteCategory (categoryId) {
  
  Swal.fire({
      title: 'Are you sure?',
      text: "You want to delete Brand!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'yes, Delete!'
  }).then((result) => {
      if (result.isConfirmed) {
          $.ajax({
              url: '/admin/deleteCategory',
              data: {
                categoryId:categoryId,
                
              },
              method: 'delete',
              success: (response) => {
                  console.log("waoring")
                  if(response.success){
                    $('#table').load('/admin/brand #table')
                  console.log(response);
                  Swal.fire({
                      title: 'Deleted!',
                      text: 'Your deleted',
                      icon: 'success',
                      showConfirmButton: false,
                      timer:1000
                  })
                  }else{
                    Swal.fire({
                      icon: 'error',
                      title: 'Oops...',
                      text: 'something error in brand delete!',
               
                    })
                  }
  
                  
                  
  
              }
  
          })
      }
  })
  }
  
