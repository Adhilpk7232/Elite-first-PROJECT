        confirmButtonText: 'yes, delete!'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: '/delete-cart-product',
                data: {
                  userId:userId,
                  deleteProId:productId
                },
                method: 'post',
                success: (response) => {
                    console.log("waoring")
    
                    $('#table').load('/cart #table')
                    console.log(response);
                    Swal.fire({
                        title: 'deleted!',
                        text: 'Your deleted',
                        icon: 'success',
                        showConfirmButton: false,
                        timer:1000
                    })
                    
    
                }
    
            })
        }
    })
    }
    
