    <script>

        function changeQuantity(userId, productId, count, proPrice) {  
            let quantity = parseInt(document.getElementById(productId).innerHTML)
            // let stock = parseInt(document.getElementsByClassName(productId)[0].value)
            let procount = parseInt(count)
            //  if(quantity >= stock && procount === 1){
            //     Swal.fire({
            //         title: 'Out of stock!',
            //         text: 'Quantity should be more than zero',
            //         icon: 'warning',
            //         timer: 1500,
            //     })
            // }else
            console.log(quantity,"qty");
            console.log(procount,"+/-");
             if(quantity <= 1 && procount === -1 ){
                // Swal.fire({
                //     title: 'Invalid Quantity!',
                //     text: 'Quantity should be more than zero',
                //     icon: 'warning',
                //     timer: 1500,
                // })
            }else{
              $.ajax({
                url: '/change-quantity',
                data: {
                  user: userId,
                  product: productId,
                  count: count,
                  Quantity: quantity,
                  proPrice:proPrice
                },
                method: 'post',
                success: (response) => {
                    console.log(quantity+count);
                    $('#table').load('/cart #table')
                  document.getElementById(productId).innerHTML = quantity+count
                  document.getElementsByClassName(productId)[0].innerHTML = response.productSinglePrice
                  document.getElementById('total').innerHTML = response.sum
                
                }
              })
              
            }
    
            
        }
        
    
        
    
    </script>
    
    <script>
